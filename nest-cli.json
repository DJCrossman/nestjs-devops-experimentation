{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "**/*.hbs",
      "**/*.sql",
      "**/*.css"
    ],
    "watchAssets": true,
    "builder": {
      "type": "swc",
      "options": {
        "extensions": [
          ".js",
          ".ts",
          ".tsx"
        ]
      }
    },
    "deleteOutDir": true,
    "typeCheck": true
  }
}